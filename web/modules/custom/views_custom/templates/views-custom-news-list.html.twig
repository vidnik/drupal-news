{#
/**
 * @file views-custom-banner.html.twig
 * View template to display custom banner.
 *
 *
 * - rows: Contains a nested array of rows. Each row contains an array of
 *   columns.
 *
 * @ingroup views_templates
 */
#}

<div>
  {% for key, row in rows %}
    <div>

      <div class="d-flex border-bottom-blue pt-3 pb-4 align-items-center justify-content-between">
        <div class="pr-3">
          <h5>
            {% if row.title %}
                {{ row.title }}
            {% endif %}
          </h5>
          <div class="fs-12">
            <span class="mr-2">
            {% if row.taxonomy %}
            {{ row.taxonomy }}
            {% endif %}
            </span>
            {% if row.date %}
                {{ row.date }}
            {% endif %}
          </div>
        </div>
        <div class="rotate-img">
          {% if row.image %}
              {{ row.image }}
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
