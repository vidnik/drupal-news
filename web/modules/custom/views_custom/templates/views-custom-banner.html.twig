{#
/**
 * @file views-custom-banner.html.twig
 * View template to display custom banner.
 *
 *
 * - rows: Contains a nested array of rows. Each row contains an array of
 *   columns.
 *
 * @ingroup views_templates
 */
#}

<div>
  {% for key, row in rows %}
  <div>
    {% if row.image %}
      <div class="pickgradient">
        {{ row.image }}
      </div>
    {% endif %}
      <div class="banner-content">
        {% if row.taxonomy %}
          <div class="badge badge-danger fs-12 font-weight-bold mb-3">
            {{ row.taxonomy }}
          </div>

        {% endif %}

        {% if row.title %}
        <h1 class="mb-0">
            {{ row.title }}
        </h1>
        {% endif %}

        {% if row.content %}
        <h1 class="mb-2">
          {{ row.content }}
        </h1>
        {% endif %}

        {% if row.date %}
        <div class="fs-12">
          {{ row.date }}
        </div>
        {% endif %}

      </div>
  </div>
  {% endfor %}
</div>
